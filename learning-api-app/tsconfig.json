{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "baseUrl": ".",
    "extensions": ["*.js", "*.jsx", "*.ts", "*.tsx", "*.md"],
    "paths": {
      "@learning/*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
